                     <GridPane.margin>
                        <Insets bottom="20.0" />
                     </GridPane.margin>
                  </Button>
                  <Button fx:id="btCadastro" mnemonicParsing="false" onAction="#onBtCadastroAction" text="NÃ£o tem uma conta? Cadastre-se agora." GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="15.0" />
                     </padding>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin>
            </GridPane>
         </children>
      </VBox>
   </children>
</HBox>
