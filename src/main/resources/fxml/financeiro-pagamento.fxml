    <Text text="Mês:" layoutX="600" layoutY="250"/>
    <ComboBox layoutX="775" layoutY="230" prefHeight="25" prefWidth="110" promptText="STATUS">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Janeiro"/>
                <String fx:value="Fevereiro"/>
                <String fx:value="Março"/>
                <String fx:value="Abril"/>
                <String fx:value="Maio"/>
                <String fx:value="Junho"/>
                <String fx:value="Julho"/>
                <String fx:value="Agosto"/>
                <String fx:value="Setembro"/>
                <String fx:value="Outubro"/>
                <String fx:value="Novembro"/>
                <String fx:value="Dezembro"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Button layoutX="620" layoutY="385" mnemonicParsing="false" onAction="#navegarParaFinanceiroStatus">
        <graphic>
            <ImageView fitHeight="100" fitWidth="100">
                <Image url="@../img/java_logo_256-256.png"/>
            </ImageView>
        </graphic>
    </Button>

    <Text text="STATUS DO MÊS" layoutX="610" layoutY="510"/>

</Pane>
