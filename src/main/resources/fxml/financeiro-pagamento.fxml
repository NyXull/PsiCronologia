        </graphic>
    </Button>

    <Text styleClass="titulo" text="FINANCEIRO" x="300" y="50"/>

    <Text styleClass="label" text="Paciente:" x="20" y="100"/>
    <Text styleClass="label" text="nome sobrenome" x="95" y="100"/>

    <Line endX="215" endY="135" startX="20" startY="135" stroke="white" strokeWidth="1.25"/>

    <Pane styleClass="fundoRosa" layoutX="275" layoutY="75" prefHeight="35" prefWidth="850"/>
    <Text styleClass="subtitulo" text="Informações" x="295" y="100"/>

    <Button id="botaoSalvar" layoutX="600" layoutY="300" mnemonicParsing="false" text="SALVAR"/>

    <Button styleClass="botoesEsquerda" layoutX="30" layoutY="250" mnemonicParsing="false" prefHeight="20"
