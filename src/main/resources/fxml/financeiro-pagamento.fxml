    <Button styleClass="botoesEsquerda" layoutX="30" layoutY="400" mnemonicParsing="false" prefHeight="20"
            prefWidth="175" text="BIBLIOTECA"/>

    <Button id="botaoSair" layoutX="30" layoutY="475" mnemonicParsing="false" onAction="#navegarParaLogin"
            prefHeight="20" prefWidth="175" text="SAIR"/>

    <Text text="Valor por sessão:" layoutX="300" layoutY="150"/>
    <TextField layoutX="450" layoutY="125" prefHeight="20" promptText="R$ 350"/>

    <Text text="Vencimento:" layoutX="300" layoutY="200"/>
    <TextField layoutX="450" layoutY="175" prefHeight="20" promptText="11/11/2024"/>

    <Text text="Status:" layoutX="300" layoutY="250"/>
    <ComboBox layoutX="450" layoutY="230" prefHeight="25" prefWidth="110" promptText="STATUS">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="PAGO"/>
                <String fx:value="ABERTO"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Text text="Quantidade por mês:" layoutX="600" layoutY="150"/>
    <TextField layoutX="775" layoutY="125" prefHeight="20" promptText="2"/>

    <Text text="TOTAL:" layoutX="600" layoutY="200"/>
